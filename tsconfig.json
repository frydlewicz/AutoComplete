{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}